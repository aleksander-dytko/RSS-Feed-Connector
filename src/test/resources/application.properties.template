# RSS Feed Connector Configuration Template
# Based on Camunda Connector SDK documentation
# https://docs.camunda.io/docs/components/connectors/custom-built-connectors/connector-sdk/

# Server configuration
server.port=9898

# Camunda SaaS Configuration
# Replace these values with your actual SaaS cluster credentials
camunda.client.mode=saas
camunda.client.auth.client-id=${CAMUNDA_CLIENT_ID:your-client-id-here}
camunda.client.auth.client-secret=${CAMUNDA_CLIENT_SECRET:your-client-secret-here}
camunda.client.cloud.cluster-id=${CAMUNDA_CLUSTER_ID:your-cluster-id-here}
camunda.client.cloud.region=${CAMUNDA_CLOUD_REGION:your-region-here}

# Connector runtime configuration
camunda.connector.polling.enabled=true
camunda.connector.polling.max-jobs-active=10

# Logging configuration
logging.level.io.camunda.connector=INFO
logging.level.io.camunda.zeebe=INFO
logging.level.io.camunda.connector.rssfeed=DEBUG
logging.level.root=WARN
